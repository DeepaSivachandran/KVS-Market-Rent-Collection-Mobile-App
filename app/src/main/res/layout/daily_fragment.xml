<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/comman_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="2">

        <ListView
            android:id="@+id/customer_Listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/search_layout"
            android:layout_weight="1.75"
            android:divider="@null"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.25"
            android:background="#f2f2f5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1.6"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp"
                android:weightSum="0">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:padding="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="Total  "
                            android:textColor="#4a4e54"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/due_amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-light"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="\u20B9 0"
                            android:textColor="#173bb0"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/product_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="start"
                        android:padding="1dp"
                        android:text="Maran 25000/1"
                        android:textColor="#8b8c8c"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="end"
                        android:padding="1dp"
                        android:text="0.00"
                        android:textColor="#3a74ab"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp"
                android:weightSum="0">


                <ImageView
                    android:id="@+id/total_print_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/print_bg"
                    android:gravity="center"
                    android:padding="9dp"
                    android:src="@drawable/ic_baseline_print_24"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    tools:ignore="NestedWeights" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>