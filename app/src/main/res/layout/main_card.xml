<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="3dp"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="9dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/LL_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.40"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp"
                android:weightSum="0"
                android:visibility="visible">

                <TextView
                    android:id="@+id/shop_no_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:background="#6f568f"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="NestedWeights" />

            </LinearLayout>

             <LinearLayout
            android:layout_width="0dp"
                 android:layout_weight="1.60"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp"
            android:weightSum="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.50"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start"
                    android:padding="0dp"
                    android:text=" Deepa Sivachandran"
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/paid_tv"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Paid"
                    android:background="@drawable/paid_bg"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tenant_name_tv"
                    android:layout_width="0dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start"
                    android:padding="0dp"
                    android:text=" - "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Old Due"
                        android:textColor="@color/txt_gray"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/olddue_amount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="\u20B9 0"
                        android:textColor="#b31414"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="end"
                        android:padding="0dp"
                        android:text="\u20B9 "
                        android:textColor="@color/txt_gray"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:ignore="NestedWeights" />

                    <EditText
                        android:id="@+id/due_amount_tv"
                        android:layout_width="0dp"
                        android:layout_weight="0.55"
                        android:layout_marginBottom="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="center"
                        android:inputType="number"
                        android:enabled="false"
                        android:padding="6dp"
                        android:text="0"
                        android:textColor="#173bb0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Total"
                        android:textColor="@color/txt_gray"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        tools:ignore="NestedWeights" />

                    <EditText
                        android:id="@+id/total_amount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="\u20B9 0"
                        android:textColor="#239e18"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="0dp"
                android:weightSum="2"
                android:visibility="gone">

                <TextView
                    android:id="@+id/product_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1.2"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="start"
                    android:padding="1dp"
                    android:text="Maran 25000/1"
                    android:textColor="#8b8c8c"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="end"
                    android:padding="1dp"
                    android:text="0.00"
                    android:textColor="#3a74ab"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

            </LinearLayout>

        </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>