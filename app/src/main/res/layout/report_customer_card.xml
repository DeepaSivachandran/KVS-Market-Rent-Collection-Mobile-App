<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_weight="0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="2dp">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="0.20"
                android:gravity="top"
                android:padding="0dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_sno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="5"
                    android:textColor="@color/common_txt_color"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="2"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:id="@+id/receipt_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start"
                    android:padding="0dp"
                    android:text="-"
                    android:textColor="@color/common_txt_color"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="start"
                        android:padding="0dp"
                        android:text="-"
                        android:textColor="@color/common_txt_color"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/area_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text=""
                        android:textColor="@color/common_txt_color"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        tools:ignore="NestedWeights" />
                </LinearLayout>

                <TextView
                    android:id="@+id/acc_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start"
                    android:padding="0dp"
                    android:text="-"
                    android:textColor="@color/common_txt_color"
                    android:textSize="13dp"
                    android:textStyle="normal"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">


                <ImageView
                    android:id="@+id/sub_print"
                    android:layout_width="40dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:drawablePadding="2dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center|center_vertical"
                    android:padding="1dp"
                    android:background="@drawable/print_bg"
                    android:src="@drawable/ic_baseline_print_24"
                    tools:ignore="NestedWeights"
                    android:visibility="gone"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:gravity="end|center_vertical"
                android:orientation="vertical"
                android:padding="2dp">


                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:drawablePadding="2dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center|center_vertical"
                    android:padding="1dp"
                    android:text="-"
                    android:textColor="@color/common_txt_color"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
